{
  "name": "angular-mono-library",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lerna:build": "lerna run build --concurrency=1",
    "versionup": "lerna version --conventional-commits --no-git-tag-version --yes",
    "commit-version": "git add . && git commit -m \"chore(release): publish `node -p 'require(\"./lerna.json\").version'`\"",
    "release": "lerna publish from-package --no-verify-access --yes"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/dcagnetta/angular-lerna-library.git"
  },
  "dependencies": {
    "first": "file:projects\\@codeboss/first",
    "second": "file:projects\\@codeboss/second"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.5",
    "@angular/cli": "~12.2.5",
    "@angular/compiler-cli": "~12.2.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "cz-conventional-changelog": "^3.3.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lerna": "^4.0.0",
    "ng-packagr": "^12.1.1",
    "typescript": "~4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
